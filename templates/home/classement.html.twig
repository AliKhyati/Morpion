{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <ul class="list-group col-4">


        {% for player in scoreBoard %}
            <li class="list-group-item d-flex ps-5 pe-5 justify-content-between align-items-center">
                {{ player.0 }}
                <span class="badge bg-primary rounded-pill">{{ player.1 }}</span>
            </li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}